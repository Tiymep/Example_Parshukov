<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d" Background="#AAC"
        Title="Вход в систему аренды и прокатв самокатов" Height="400" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <TextBlock Text="Добро пожаловать в сеть аренду и проката!
                      Эх,прокачу! - Когда самокат оплачу"
                       FontSize="16" FontWeight="SemiBold"
                       TextAlignment="Center" TextWrapping="Wrap"  Margin="-30,0,-20,20" Height="47" />

            <Label Content="Логин" />
            <TextBox x:Name="TextBox1" Height="30" Margin="0,5"/>

            <Label Content="Пароль" Margin="0,15,0,0"/>
            <PasswordBox x:Name="PasswordBox1" Height="30" Margin="0,5"/>


            <Button x:Name="button1" Content="Войти" Width="100" Height="35" Margin="0,30,0,0" HorizontalAlignment="Center" Background="#276AAC" Foreground="White"  FontWeight="Bold"
                    Click="Button1_Click"/>
        </StackPanel>
    </Grid>
</Window>